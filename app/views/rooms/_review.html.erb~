<section class = "review">
  <% if room.show_form? %>
    <%= render partial: 'review_form', locals: {room: room} %>
  <% else %>
    <% room.stars.times do %>
      <span class="fa fa-spinner fa-spin"></span>
    <% end %>

    <% (room.review_points.max - room.stars).times do %>
      <span class="fa-star empty_star"></span>
    <% end %>

    <%= t '.stats', average: room.stars, max: room.review_points.max, count: room.total_reviews %>
  <% end %>
</section>
